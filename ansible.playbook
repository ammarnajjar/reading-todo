#!/bin/bash

PROJECT_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
VENV="$PROJECT_ROOT/ansible/venv"
echo $VENV

if [ ! -e "$VENV" ]; then
    python3 -m venv $VENV
    source $VENV/bin/activate
    python3 -m pip install ansible
    if [ $? -ne 0 ]; then
        rm -rf $VENV
        exit 1
    fi
fi

if [ ! -z "$1" ]; then
    source $VENV/bin/activate
    $VENV/bin/ansible-playbook $*
fi

